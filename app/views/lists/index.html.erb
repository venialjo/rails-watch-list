<div class="container">

  <ul class="card-list">
    <% @lists.each do |l| %>
      <li class="card card-glow">
        <% if l.photo.attached? %>
          <%= link_to list_path(l) do %>
            <div style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path l.photo.key, height: 300, width: 400, crop: :fill %>)">
              <%= link_to l.name, list_path(l), class: "card-link" %>
              <%= link_to "Remove", list_path(l), method: :delete, data: { confirm: "Are you sure?" } %>
            </div>
          <% end %>
        <% else %>
          <%= link_to list_path(l) do %>
            <div style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1440404653325-ab127d49abc1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2340&q=80')">
              <%= link_to l.name, list_path(l), class: "card-link" %>
              <%= link_to "Remove", list_path(l), method: :delete, data: { confirm: "Are you sure?" } %>
            </div>
          <% end %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
