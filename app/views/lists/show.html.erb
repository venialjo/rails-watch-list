<h1> <%= @list.name %> </h1>

<ul>
  <% @bookmarks.each do |b| %>
    <li><%= b.movie.title %> - <%= b.comment %> -
    <%= link_to "Remove", bookmark_path(b), method: :delete,
      data: { confirm: "Are you sure?" } %></li>
  <% end %>

  <br>

  <li><%= link_to "Add movie",  new_list_bookmark_path(@list)%></li>
  <li><%= link_to "Back to watchlists", lists_path %></li>
</ul>
