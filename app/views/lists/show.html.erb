<div class="container">
  <div class="show-title">
    <h1><%= @list.name %></h1>
    <span><%= link_to "Add a movie to the list", new_list_bookmark_path(@list) %></span>
  </div>
  <ul>
    <% @bookmarks.each do |b| %>
      <% if b.list == @list %>
        <li class="card card-glow">
          <div style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= b.movie.poster_url %>)">
            <%= link_to b.movie.title, bookmark_path(b), class: "card-link" %> -
            <%= link_to "Remove", bookmark_path(b), method: :delete, data: { confirm: "Are you sure?" } %>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
